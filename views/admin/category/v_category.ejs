<% include ../../partials/header.ejs %>
  <% include ../../partials/sidebar.ejs %>
    <div class="col-12 col-xl-9">
      <% include ../../partials/navbar.ejs %>
        <div class="content">
          <div class="row">
            <div class="col-lg-12 col-md-6 ">
              <% if (alert.message != '') { %> 
                <div class="alert <%= alert.status == 'success' ? 'alert-success' : 'alert-danger' %> alert-dismissible fade show" role="alert">
                  <strong> <%= alert.status == 'success' ? 'Congratulations!' : 'Sorry!' %> </strong> <%= alert.message %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% } %>
              <% include ./table.ejs %>
            </div>
          </div>
        </div>

        <% include ../../partials/js.ejs %>
      <script>
        $('#dataTable').on('click', '.btn-update', function() {
          let id = $(this).data('id')
          let name = $(this).data('name')
          console.table(id, name)

          $('.id').val(id)
          $('.name').val(name)
        })
      </script>