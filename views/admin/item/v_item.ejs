<% include ../../partials/header.ejs %>
  <% include ../../partials/sidebar.ejs %>
    <div class="col-12 col-xl-9">
      <% include ../../partials/navbar.ejs %>
        <div class="content">
          <div class="row">
            <div class="col-lg-12 col-md-6 ">
              <% if (alert.message != '') { %> 
                <div class="alert <%= alert.status == 'success' ? 'alert-success' : 'alert-danger' %> alert-dismissible fade show" role="alert">
                  <strong> <%= alert.status == 'success' ? 'Congratulations!' : 'Sorry!' %> </strong> <%= alert.message %>
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              <% } %>
              
              <% if(action === 'view') { %>
                <div class="d-flex w-100">
                  <ul class="nav nav-tabs border-bottom-0" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                      <button class="nav-link active" id="item-tab" data-bs-toggle="tab" data-bs-target="#showItem" type="button" role="tab" aria-controls="home" aria-selected="true">Show Item</button>
                    </li>
                    <li class="nav-item" role="presentation">
                      <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#addItem" type="button" role="tab" aria-controls="profile" aria-selected="false">Add Item</button>
                    </li>
                  </ul>
                </div>

                <div class="tab-content" id="myTabContent">
                  <% include ./table.ejs %>
                  <% include ./add_item.ejs %>
                </div>

              <% } else if(action === 'viewImages') { %>
                <div class="d-flex w-100">
                  <ul class="nav nav-tabs border-bottom-0" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                      <button class="nav-link active" id="images-tab" data-bs-toggle="tab" data-bs-target="#showImages" type="button" role="tab" aria-controls="home" aria-selected="true">Show Images</button>
                    </li>
                  </ul>
                </div>
  
                <div class="tab-content" id="myTabContent">
                  <% include ./v_images.ejs %>
                </div>
              <% } else { %>
                <div class="d-flex w-100">
                  <ul class="nav nav-tabs border-bottom-0" id="myTab" role="tablist">
                    <li class="nav-item" role="presentation">
                      <button class="nav-link active" id="update-tab" data-bs-toggle="tab" data-bs-target="#showUpdate" type="button" role="tab" aria-controls="home" aria-selected="true">Update Items</button>
                    </li>
                  </ul>
                </div>
  
                <div class="tab-content" id="myTabContent">
                  <% include ./v_update.ejs %>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <% include ../../partials/js.ejs %>