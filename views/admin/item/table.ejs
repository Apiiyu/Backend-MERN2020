<div class="tab-pane fade show active" id="showItem" role="tabpanel" aria-labelledby="home-tab">
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable">
          <thead>
            <tr>
              <th>No</th>
              <th>Title</th>
              <th>Price</th>
              <th>City</th>
              <th>Country</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% data.map((item, index) => { %>
              <tr>
                <td>
                  <%= index + 1 %>
                </td>
                <td>
                  <%= item.title %>
                </td>
                <td>
                  <strong>$<%= item.price %></strong>
                </td>
                <td>
                  <%= item.city %>
                </td>
                <td>
                  <%= item.country %>
                </td>
                <td class="d-flex">
                  <form action="/items/delete/<%= item._id %>?_method=delete" method="post">
                    <a href="/items/view/images/<%= item._id %>" class="btn btn-info btn-circle btn-sm">
                      <i class="fas fa-image"></i>
                    </a>
                    
                    <a href="/items/update/<%= item._id %>" class="btn btn-sm btn-circle btn-warning">
                      <i class="fas fa-edit"></i>
                    </a>
                    
                    <button type="submit" class="btn btn-sm btn-circle btn-danger">
                      <i class="fas fa-trash"></i>
                    </button>

                    <a href="/items/detail/<%= item._id %>" class="btn btn-info btn-circle btn-sm">
                      <i class="fas fa-plus"></i>
                    </a>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>