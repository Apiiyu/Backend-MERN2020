<div class="tab-pane fade show active" id="showUpdate" role="tabpanel" aria-labelledby="home-tab">
  <div class="card shadow mb-4">
    <div class="card-body">
      <form action="/items/update/<%= data._id %>?_method=PUT" method="post" enctype="multipart/form-data">
        <div class="form-floating">
          <input type="text" name="title" class="form-control" id="floatingInput" value="<%= data.title %>" required placeholder="Title">
          <label for="floatingInput">Title</label>
        </div>

        <div class="form-floating my-3">
          <input type="number" name="price" class="form-control" id="floatingInput" value="<%= data.price %>" required placeholder="Price">
          <label for="floatingInput">Price</label>
        </div>

        <div class="form-floating">
          <input type="text" name="city" class="form-control" id="floatingInput" value="<%= data.city %>" required placeholder="City">
          <label for="floatingInput">City</label>
        </div>

        <div class="form-floating mt-3">
          <input type="text" name="country" class="form-control" id="floatingInput" value="<%= data.country %>" required placeholder="Country">
          <label for="floatingInput">Country</label>
        </div>

        <div class="form-group">
          <label for="categories"></label>
          <select class="form-select" id="categories" name="categories" aria-label="Default select example">
            <option selected disabled>---- Choose Category ----</option>
            <% categories.map((item, index) => { %>
              <option 
                value="<%= item._id %>" 
                <% if(item._id.toString() === data.categories?._id.toString()) { %> selected <% } %>
              >
                <%= item.name %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="my-3">
          <label for="images" class="form-label">Images</label>
          <input class="form-control" type="file" name="images" id="images" multiple>
        </div>

        <div class="form-group">  
          <label for="editor">Description</label>
          <textarea name="description" id="editor" cols="30" rows="10">
            <%= data.description %>
          </textarea>
        </div>

        <div class="d-flex justify-content-end mt-5">
          <div class="btn-group">
            <button type="submit" class="btn btn-primary">Update Data</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>